{{#each messages}}
    <div class="alert alert-danger">{{msg}}</div>
{{else}}

{{/each}}
<h3>Nova postagem: </h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="titulo">Título: </label>
                <input type="text" id="titulo" name="titulo" value="{{postagem.titulo}}" class="form-control" required>
            <label for="slug">Slug: </label>
                <input type="text" id="slug" name="slug" value="{{postagem.slug}}" class="form-control" required>
            <label for="descricao">Descrição: </label>
                <input type="text" id="descricao" name="descricao" value="{{postagem.descricao}}" class="form-control" required>
            <label for="conteudo">Conteúdo: </label>
                <textarea name="conteudo" class="form-control" required>{{postagem.conteudo}}</textarea>
            <label for="categoria">Categorias: </label>
                <select name="categoria" class="custom-select">
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nennhum categoria registrada.</option>
                    {{/each}}
                </select>
            <button class="btn btn-success mt-3" type="submit">Editar postagem</button>
        </form>
    </div>
</div>