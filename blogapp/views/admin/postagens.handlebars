<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add">
    <button class="btn btn-success">
        Nova postagens
    </button>
</a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <h6>Slug: {{slug}}</h6><br>
            <small>Descrição: {{descricao}}</small><br>
            <small>Conteúdo: {{conteudo}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <small>Data: {{data}}</small><hr>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success">Editar</button></a>
            <a href="/admin/postagens/delete/{{_id}}"><button class="btn btn-danger">Deletar</button></a>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}