<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add">
    <button class="btn btn-success">
        Nova categorias
    </button>
</a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data: {{data}}</small><hr>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success">Editar</button></a>
            <a href="/admin/categorias/delete/{{_id}}"><button class="btn btn-danger">Deletar</button></a>
            <a href="/categorias/{{slug}}"><button class="btn btn-dark">Postagens</button></a>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}